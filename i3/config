###############################

exec_always --no-startup-id ~/.config/i3/alternating_layouts.py
exec_always --no-startup-id ~/.config/i3/per-workspace-layout.pl
exec --no-startup-id mpd
exec_always --no-startup-id xrdb -merge ~/.Xresources
#exec --no-startup-id parcellite
exec_always --no-startup-id xset -b
#exec_always --no-startup-id lemonbar -g 1360x4
#exec_always --no-startup-id "pkill polybar; polybar -r i3"
#exec_always --no-startup-id pamac-tray
exec_always --no-startup-id /home/direktor/.config/scripts/dunst/wal-set
exec --no-startup-id wal -a 96 -f ~/.colors/wal/colors.json
exec --no-startup-id feh --bg-fill ~/Desktop/space.png
exec --no-startup-id compton --config ~/.config/compton/compton.conf
#exec --no-startup-id redshift -l 48.5:2.2 -t 5500:3500 -l manual
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Miscs
for_window [class="^.*"] border pixel 1
#for_window [class="^.*"] split toggle
bindsym $mod+y [class="^.*"] split toggle
for_window [class="^.*"] title_format " %title"  
for_window [class="Termite" instance="termiteFloat"] floating enable
for_window [class="Pamac-manager"] floating enable
for_window [class="Gmrun"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="URxvt" instance="URxvtFloat"] floating enable, border pixel 0
for_window [instance="oblogout"] fullscreen enable
for_window [class="Xarchiver"] floating enable

# Scratchpad
#for_window [title="^scratchpad$"] border pixel 1, floating enable, move scratchpad
#bindsym F11 [instance="scratchpad"] scratchpad show; sticky enable
#exec_always --no-startup-id urxvt -name scratchpad -geometry 110x20+297+1

bindsym F11 scratchpad show; sticky enable

popup_during_fullscreen smart
new_float none
new_window normal
hide_edge_borders smart
gaps inner 7
gaps outer 5
smart_borders on
#smart_gaps on
#default_orientation auto
#workspace_layout default
workspace_auto_back_and_forth yes

