label-muted = "  "

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = "  "
label-open-foreground = ${colors.white}
label-open-background = ${colors.magenta}
label-close = [back]
label-close-foreground = ${colors.white}
label-separator = |
label-separator-foreground = ${colors.fg}

menu-0-0 = [reboot]
menu-0-0-exec = menu-open-1
menu-0-0-foreground = ${colors.green}
menu-0-1 = [off]
menu-0-1-exec = menu-open-2
menu-0-1-foreground = ${colors.red}

menu-1-0 = [reboot]
menu-1-0-exec = systemctl reboot
menu-1-0-foreground = ${colors.green}

menu-2-0 = [off]
menu-2-0-exec = systemctl poweroff
menu-2-0-foreground = ${colors.red}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
;label-mounted = ${colors.bleu} %percentage_used%%
label-mounted = %{F#8BE9FD}[disk]%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.rouge}
format-prefix-background = ${colors.black_2}

label = " %percentage%% "
label-background = ${colors.bg}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.jaune}
format-prefix-background = ${colors.black_2}
label = " %mb_used% "
label-background = ${colors.bg}

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected-prefix-foreground = ${colors.vert}
label-connected = %{F#FF5555}[up]%{F-} %upspeed% %{F#50FA7B}[down]%{F-} %downspeed%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/archmenu]
type = custom/text
content = "  "
content-background = ${colors.blue}
content-foreground = ${colors.blanc}

click-left = mygtkmenu ~/Téléchargements/TestMenu.txt

