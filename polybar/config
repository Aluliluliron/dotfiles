[bar/bspwm]
monitor = HDMI-0
width = 100%
height = 18
top = true
offset-x = 0
offset-y = 0
fixed-center = false

background = ${colors.bg}
foreground = ${colors.blanc}

border-size = 0

padding-left = 0
padding-right = 0
module-margin = 0

font-0 = Tewi:style=Regular:size=12;2
font-3 = FontAwesome:pixelsize=9;2
font-2 = Wuncon Siji:style=Regular:size=9;2
font-1 = Terminusicons2Mono:style=Regular:pixelsize=9;0

modules-left = powermenu bspwm xwindow 
modules-center =
modules-right = mpd2 cmus cpu memory volume time date

;dim-value = 0.5

;tray-position = right
;tray-padding = 0
;tray-offset-x = 0
;tray-offset-y = 0
;tray-transparent = true
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/i3]
monitor = ${env:MONITOR:}
width = 100%
height = 20
top = true
offset-x = 0
offset-y = 0
fixed-center = false

;dim-value = 0.96
enable-ipc = true

background = ${colors.bg}
foreground = ${colors.blanc}

padding-left = 0
padding-right = 0
module-margin = 0

font-0 = Inconsolata:style=Regular:size=12;2
font-3 = FontAwesome:pixelsize=9;2
font-2 = Wuncon Siji:style=Regular:size=9;2
font-1 = Terminusicons2Mono:style=Regular:pixelsize=9;0

modules-left = archmenu i3 
modules-center =
modules-right = mpd2 cmus cpu memory volume time date

tray-position = right
tray-padding = 1
tray-offset-x = 0
tray-offset-y = 0
tray-detached = false
tray-scale = 1.0

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;separator = %{F#4D4D4A}%{F-}

;border-size = 20
;border-left-size = 0
;border-right-size = 0
;border-top-size = 0
;border-color = #00000000

