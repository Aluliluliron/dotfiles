[module/cmus]
type = custom/script

format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.violet}
format-prefix-background = ${colors.black_2}
label = " %output% "

exec = sh ~/.config/scripts/cmus/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/mpd2]
type = custom/script

format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.violet}
format-prefix-background = ${colors.black_2}
label = " %output% "

interval = 1
exec = echo "$(mpc current)" 

click-left = mpc pause
click-right = mpc play

[module/pkg]
type = custom/script
interval = 1200
format = <label>
format-underline = ${colors.rouge}
label = "%output:0:30%"
exec = .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/redshift]
type = custom/script
interval = 50
exec = ~/.config/polybar/redshift.sh

[module/trash]
interval = 1
type = custom/script
exec = ~/.config/polybar/trash
format-prefix = " "
click-right = rm -rf ~/.local/share/Trash/files/* ;exec paplay ~/.sounds/freedesktop/stereo/trash-empty.oga
click-left = thunar ~/.local/share/Trash/files

[module/mpd]
type = internal/mpd

format-online = <icon-random> <label-song>
format-offline =
format-stopped = ${self.format-online}
format-playing = ${self.format-online}
format-paused = ${self.format-online}

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-random = "[mpd]"

label-playing = [test]
label-song = %artist% - %title%  
;label-song-maxlen = 25
label-song-ellipsis = true

toggle-on-foreground = ${colors.cyan}
toggle-off-foreground = ${colors.violet}

[module/time]
type = internal/date
interval = 1.0

time = " %H:%M "

format-prefix = "  "
format-prefix-foreground = ${colors.blanc}
format-prefix-background = ${colors.magenta_2}

format-background = ${colors.magenta}

label = %time%

[module/date]
type = internal/date
interval = 1.0

date = " %d. %b %y. "

format-prefix = "%{A:~/.config/scripts/PanelBspwm/dcal:}  %{A}"
format-prefix-background = ${colors.blue_2}
format-background = ${colors.blue}

label = "%{A:~/.config/scripts/PanelBspwm/dcal:}%date%%{A}"

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = "[temp] "
format-prefix-foreground = ${colors.jaune}
exec = ~/.config/polybar/weather.sh

